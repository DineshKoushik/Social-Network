<html>
    <%include partials/header%>
    <body class="landing_body">
        <h1 id="landing_header">Node Connect</h1>
        <div id="sign_up_div">
            <form id="sign_up_form">
                <h2>Sign Up&nbsp</h2>
                <input id="name" name="name" type="text" placeholder="Name">
                <input id="email" name="email" type="text" placeholder="Email Address">
                <input id="password" name="password" type="text" placeholder="Password">
                <input id="register_user" name="name" type="Button" value="Register">
            </form>
        </div>
        <div id="sign_in_div">
            <form id="sign_in_form">
                <h2>Sign In</h2>
                <input id="usr_email" name="email" type="text" placeholder="Email Address">
                <input id="usr_password" name="password" type="text" placeholder="Password">
                <input id="sign_in_user" name="name" type="Button" value="Sign In">
            </form>
        </div>
    </body>
    <script>
        $("#register_user").on("click", function() {
            $.ajax({
                method: "POST",
                url: "/sign_up",
                data: $("#sign_up_form").serialize(),
                success: function() {
                    console.log("success")
                },
                error: function(err) {
                    $("#name, #email, #password").val("");
                }
            })
        })
        $("#sign_in_user").on("click", function() {
            $.ajax({
                method: "POST",
                url: "/login",
                data: $("#sign_in_form").serialize(),
                success: function() {
                    console.log("success")
                },
                error: function(err) {

                }
            })
        })
    </script>
</html>